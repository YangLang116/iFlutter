<idea-plugin>
    <actions>
        <action id="com.xtu.plugin.flutter.inject.AddIntlAction"
                icon="PluginIcons.LOGO"
                text="Add Locale Res"
                description="Add Locale Res"
                class="com.xtu.plugin.flutter.action.intl.action.AddIntlAction">
            <add-to-group group-id="FlutterIntlToolsActionGroup"
                          anchor="after"
                          relative-to-action="flutterIntl.removeLocale"/>
        </action>
        <action id="com.xtu.plugin.flutter.inject.RemoveIntlAction"
                icon="PluginIcons.LOGO"
                text="Remove Locale Res"
                description="Remove Locale Res"
                class="com.xtu.plugin.flutter.action.intl.action.RemoveIntlAction">
            <add-to-group group-id="FlutterIntlToolsActionGroup"
                          anchor="after"
                          relative-to-action="com.xtu.plugin.flutter.inject.AddIntlAction"/>
        </action>
    </actions>
</idea-plugin>