<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <annotator language="yaml" implementationClass="com.xtu.plugin.flutter.annotator.PackageUpdateAnnotator"/>
    </extensions>
    <actions>
        <group popup="false"
               id="com.xtu.plugin.flutter.group.yaml"
               class="com.xtu.plugin.flutter.action.IFlutterActionGroup">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <action id="com.xtu.plugin.flutter.RepositoryAnchorAction"
                    icon="PluginIcons.CODE"
                    text="Open Repository"
                    description="Open Repository"
                    class="com.xtu.plugin.flutter.action.anchor.RepositoryAnchorAction">
            </action>
            <action id="com.xtu.plugin.flutter.ConvertDepToLocalAction"
                    icon="PluginIcons.FETCH"
                    text="Convert Dependency"
                    description="Convert Dependency"
                    class="com.xtu.plugin.flutter.action.convert.ConvertDepToLocalAction">
            </action>
            <action id="com.xtu.plugin.flutter.PackageAnchorAction"
                    icon="PluginIcons.LOCATE"
                    text="Anchor Dependency"
                    description="Anchor Dependency"
                    class="com.xtu.plugin.flutter.action.anchor.PackageAnchorAction">
            </action>
        </group>
        <action id="com.xtu.plugin.flutter.remove.comment"
                icon="PluginIcons.COMMENT"
                text="Remove Comments"
                description="Remove Comments"
                class="com.xtu.plugin.flutter.action.remove.CommentRemoveAction">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>